{% extends 'base.html.twig' %}

{% block title %}Album
{% endblock %}

{% block body %}
	<h1>Album</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ album.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ album.title }}</td>
			</tr>
			<tr>
				<th>ReleasedAt</th>
				<td>{{ album.releasedAt ? album.releasedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ album.createdAt ? album.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ album.updatedAt ? album.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>CoverImage</th>
				<td>{{ album.coverImage }}</td>
			</tr>
			<tr>
				<th>TrackAmount</th>
				<td>{{ album.trackAmount }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('admin_album_index') }}">back to list</a>

	<a href="{{ path('admin_album_edit', {'id': album.id}) }}">edit</a>

	{{ include('album/_delete_form.html.twig') }}
{% endblock %}
