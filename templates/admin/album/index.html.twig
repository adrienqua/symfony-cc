{% extends 'base.html.twig' %}

{% block title %}Album index
{% endblock %}

{% block body %}
	<h1>Album index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>ReleasedAt</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>CoverImage</th>
				<th>TrackAmount</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for album in albums %}
				<tr>
					<td>{{ album.id }}</td>
					<td>{{ album.title }}</td>
					<td>{{ album.releasedAt ? album.releasedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ album.createdAt ? album.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ album.updatedAt ? album.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ album.coverImage }}</td>
					<td>{{ album.trackAmount }}</td>
					<td>
						<a href="{{ path('admin_album_show', {'id': album.id}) }}">show</a>
						<a href="{{ path('admin_album_edit', {'id': album.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_album_new') }}">Create new</a>
{% endblock %}
