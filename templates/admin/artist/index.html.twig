{% extends 'base.html.twig' %}

{% block title %}Artist index
{% endblock %}

{% block body %}
	<h1>Artist index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>BirthDate</th>
				<th>Biography</th>
				<th>Picture</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for artist in artists %}
				<tr>
					<td>{{ artist.id }}</td>
					<td>{{ artist.name }}</td>
					<td>{{ artist.createdAt ? artist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ artist.updatedAt ? artist.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ artist.birthDate ? artist.birthDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ artist.biography }}</td>
					<td>{{ artist.picture }}</td>
					<td>
						<a href="{{ path('admin_artist_show', {'id': artist.id}) }}">show</a>
						<a href="{{ path('admin_artist_edit', {'id': artist.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_artist_new') }}">Create new</a>
{% endblock %}
