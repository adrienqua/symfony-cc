{% extends 'base.html.twig' %}

{% block title %}Artist
{% endblock %}

{% block body %}
	<h1>Artist</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ artist.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ artist.name }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ artist.createdAt ? artist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ artist.updatedAt ? artist.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>BirthDate</th>
				<td>{{ artist.birthDate ? artist.birthDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Biography</th>
				<td>{{ artist.biography }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<td>{{ artist.picture }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('admin_artist_index') }}">back to list</a>

	<a href="{{ path('admin_artist_edit', {'id': artist.id}) }}">edit</a>

	{{ include('artist/_delete_form.html.twig') }}
{% endblock %}
