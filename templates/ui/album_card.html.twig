<div class="max-w-sm bg-neutral-100 border border-gray-200 rounded-2xl shadow-md overflow-hidden">
	<img src="{{ album.coverImage }}" alt="{{ album.title }}" class="w-full h-48 object-cover">
	<div class="px-4 py-2">
		<h2 class="text-xl font-bold text-gray-800 mb-2 line-clamp-2">{{ album.title }}</h2>
		<div class="flex gap-4">
			<span class="text-gray-600 text-sm mb-1">
				{{ album.author.name }}</span>
			<span class="text-gray-600 text-sm mb-1">
				{{ album.releasedAt|date('F j, Y') }}</span>
			<span class="text-gray-600 text-sm mb-1">
				{{ album.trackAmount }}
				pistes</span>
		</div>
	</div>
</div>
